/* 数量加减 start */

.p-count {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 88rpx;
  padding: 0 0rpx;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
}

.c-handle {
  display: flex;
  align-items: center;
  height: 60rpx;
  border: 1rpx solid #333;
  box-sizing: border-box;
  background: #f5f5f5;
}

.c-handle > image {
  padding: 20rpx 15rpx;
}

.hand-con {
  font-size: 36rpx;
  width: 120rpx;
  padding: 0 20rpx;
  text-align: center;
  border-left: 1rpx solid #333;
  border-right: 1rpx solid #333;
  border-top: 1rpx solid #333;
  border-bottom: 1rpx solid #333;
  background: #fff;
  height: 100%;
}

/* 数量加减 end */
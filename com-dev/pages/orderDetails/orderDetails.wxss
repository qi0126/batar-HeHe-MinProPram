page {
    background: rgba(248, 248, 248, 1);
    padding-bottom: 300rpx;
}

.orderDetaiWrap {
    position: relative;
}

.shop_txt {
    background: #fff
}


.topLine {
    border-bottom: 1rpx solid hsl(0, 0%, 89%);
    height: 104rpx;
    line-height: 104rpx;
    font-size: 30rpx;
    font-weight: bold;
    background: #fff;
}

.topLine image {
    vertical-align: middle;
}

/* 订单状态 */

.orderState {
    background: rgba(248, 248, 248, 1);
    padding: 53rpx 0rpx 56rpx 0rpx;
    display: flex;
    justify-content: center;
}

.orderState .imgWrap {
    width: 47rpx;
    height: 47rpx;
    margin-right: 17rpx;
}

.orderState image {
    width: 100%;
    height: 100%;
}

.orderState .state {
    font-size: 40rpx;
    font-family: PingFangSC;
    font-weight: 500;
    color: rgba(232, 104, 0, 1);
    height: 42rpx;
    line-height: 41rpx;
}

/* 订单信息 */

.ordeInfo {
    background: #fff;
    padding: 48rpx 33rpx 48rpx 33rpx;
}

.ordeInfo .title {
    font-size: 32rpx;
    font-family: PingFangSC;
    font-weight: 500;
    color: rgba(0, 0, 0, 1);
    margin-bottom: 36rpx;
    padding-left: 4rpx;
}

.orderList {
    border-top: 1rpx solid rgba(228, 228, 228, 1);
    padding: 35rpx 0rpx 34rpx 0rpx;
    /* padding-left: 4rpx; */
    display: flex;
}

.orderList .left {
    font-size: 30rpx;
    font-family: PingFangSC;
    font-weight: 400;
    color: rgba(51, 51, 51, 1);
    white-space: nowrap;
}

.orderList .right {
    font-size: 28rpx;
    font-family: PingFangSC;
    font-weight: 400;
    color: rgba(102, 102, 102, 1);
    margin-left: 44rpx;
}

.orderList .minute {
    display: inline-block;
    margin-left: 16rpx;
}

.orderList .tel {
    margin: 24rpx 0rpx 18rpx 0rpx;
}

/* 商品信息 */

.productInfoWrap {
    /* margin-bottom: 262rpx; */
}

.productTitle {
    font-size: 32rpx;
    font-family: PingFangSC;
    font-weight: 500;
    color: rgba(0, 0, 0, 1);
    margin: 89rpx 0rpx 38rpx 30rpx;
}

/* 底部合计 */

.footerWrap {
    position: fixed;
    bottom: 0rpx;
    width: 100%;
}

.footerWrap .btnWrap {
    width: 100%;
    display: flex;
    height: 100rpx;
    color: rgba(255, 255, 255, 1);
}

.btnWrap .costWrap {
    flex: 1;
    display: flex;
    font-size: 32rpx;
    font-family: STSongti-SC;
    font-weight: 400;
    background: rgba(51, 51, 51, 1);
    line-height: 100rpx;
    padding-left: 27rpx;
    width: 470rpx;
}

.costWrap .costTitle {
    margin-right: 22rpx;
    font-size: 22rpx;
}

.btnWrap .cancelBtn {
    width: 280rpx;
    background: rgba(0, 0, 0, 1);
    font-size: 30rpx;
    font-weight: bold;
    line-height: 100rpx;
    text-align: center;
}

/* 合计 */

.footerWrap .totalWrap {
    width: 100%;
    height: 111rpx;
    background: rgba(255, 255, 255, 1);
    box-shadow: 0rpx 0rpx 4rpx 0rpx rgba(16, 46, 115, 0.1);
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.leftTotal {
    font-size: 32rpx;
    color: rgba(232, 104, 0, 1);
    display: flex;
    align-items: center;
    margin-left: 28rpx;
}

.leftTotal .leftWeigth {
    margin-right: 22rpx;
    font-size: 22rpx;
    /* color:rgba(245,159,90,1); */
}

.rightTotal {
    font-size: 28rpx;
    font-family: PingFangSC;
    font-weight: 500;
    color: rgba(51, 51, 51, 1);
    margin-right: 58rpx;
}

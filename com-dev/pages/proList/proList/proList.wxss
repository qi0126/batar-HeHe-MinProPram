.sear-con {
  width: 100%;
  /* box-sizing: border-box; */
  height: 96rpx;
  /* line-height:96rpx; */
  padding: 0 20rpx;
  background:rgb(243, 243, 243);

  /* text-align: center */
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}

.sear-con .result{
  font-size:28rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
}

.screenWrap{
  margin-right: 125rpx;
}

.ShoppingCartWrap{
   position: absolute;
   top:24rpx;
   right: 38rpx;
}

.txtNothing{
  color:#999999;
  font-size:30rpx;
  margin-top:41rpx;
}
.sear {
  /* display: flex;
  align-items: center; */
  border-radius: 50rpx;
  margin: 14rpx 0;
  background: #f5f5f5;
  width: 100%;
}

.sear-place {
  font-size: 24rpx;
  color: #999
}

.sear > image {
  margin-left: 25rpx;
  margin-right: 10rpx;
}

.class {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 120rpx;
  margin-right: -20rpx;
}

.message {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
  margin-right: 40rpx
}

.message > text {
  font-size: 20rpx;
  margin-top: -4rpx;
}

.class > image {
  height: 100%
}

.class > text {
  font-size: 20rpx;
  text-align: center;
  margin-top: 2rpx
}

.slide-image {
  width: 100%;
  height: 100%;
}

.title {
  display: flex;
  justify-content: center;
  align-items: center
}

.title > text {
  margin: 40rpx 20rpx
}

/* 产品开始 */
.list {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  padding: 0 20rpx;
  margin-top:20rpx;
}

.item {
  width: 345rpx;
  height: 100%;
  margin-bottom: 28rpx;
}

.it-img {
  position: relative;
}

.iti-tag {
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  display: flex;
  font-size: 16rpx;
  color: #fff;
}

.iti-tag > view {
  width: 48rpx;
  height: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 10rpx;
  border-radius: 2px; 
}

.iti-tag > .newpro{
  background: #D90C18
}

.iti-tag > .finepro{
  background: #E8B409 
}

.it-img > image {
  width: 350rpx;
  height: 262rpx;
}

.bottom {
  padding: 20rpx 20rpx;
  padding-top: 10rpx;
}

.b-tit {
  color: #000;
  margin-bottom: 10rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  font-weight: 24rpx;
}

.kWrap{
  display: flex;
  align-items: center;
  justify-content: space-between;

}

.b-info {
  font-size: 24rpx;
  color: #666666;
  line-height: 1.8;
  padding-right:20rpx;
}
/* 产品结束 */

.b-collect {
  width: 100rpx;
  float: right;
  margin-top: 10rpx;
}

.backtop {
  width: 80rpx;
  height: 80rpx;
  position: fixed;
  bottom: 20rpx;
  right: 20rpx;
  opacity: .5;
}

.backtop:active {
  opacity: 1
}

.loadmore {
  padding-bottom: 30rpx;
}

.nothing {
  display: flex;
  justify-content: center;
  width: 100%;
  margin-top: 160rpx;
  margin-bottom: 60rpx
}

.m-info {
  position: relative
}

.m-dot {
  position: absolute;
  right: 0;
  top: 0;
  width: 14rpx;
  height: 14rpx;
  border-radius: 14rpx;
  background: #e86800
}

.series-item-wrap {
  white-space: nowrap; 
}

.series-list {
  height: 160rpx;
  background: #fff;
  margin-bottom: 30rpx;
}

.series-items {
  display: inline-flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 24rpx; 
  width: 150rpx;
  height: 100%;
}

.series-iitems {
  box-sizing: border-box;
  border-radius: 80rpx;
  width: 80rpx;
  height: 80rpx;
  background: #fafafa;
}

.series-items.active {
  color: #e86800
}

.series-items.active .series-iitems {
  border: 1px solid #e86800; 
}

.series-iitemIs {
  width:138rpx;
  text-overflow:ellipsis;
  white-space:nowrap;
  overflow:hidden;
  text-align:center;
}

.series-tit {
  padding: 0 20rpx;
  height: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 32rpx;
}

.series-tit > view:nth-of-type(1) {
  position: relative;
  margin-left: 28rpx;
}

.series-tit > view:nth-of-type(1)::before {
  position: absolute;
  left: -22rpx;
  top: 14%;
  content: ' ';
  width: 8rpx;
  height: 30rpx;
  background: #e86800;
}

.series-tit > view:nth-of-type(2) {
  display: flex;
  align-items: center;
  font-size: 24rpx
}

.series-tit > view:nth-of-type(2) image {
  margin-left: 10rpx;
}


.backtop {
  width: 80rpx;
  height: 80rpx;
  position: fixed;
  bottom: 20rpx;
  right: 20rpx;
  opacity: .5;
}

.backtop:active {
  opacity: 1
}

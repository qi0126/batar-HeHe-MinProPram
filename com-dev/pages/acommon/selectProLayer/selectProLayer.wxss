.layer {
  position: fixed;
  top: 0;
  display: flex;
  justify-content: center;
  width: 100%;
  height: 100vh;
  font-size: 28rpx;
  color: #333;
  background: rgba(0, 0, 0, .3);
  z-index: 3 
}

.layer-con {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  background: #fff;
  border-radius: 4rpx;
  width: 100%;
  height: 900rpx;
  overflow: hidden
}

.tit {
  color: #666;
  text-align: center;
  margin-top: 42rpx;
  margin-bottom: 90rpx;
}

.layer-con image {
  margin-bottom: 45rpx;
}

.info {
  font-size: 36rpx;
}

.bottom {
  position: fixed;
  top: 900rpx;
  display: flex;
  width: 100%;
}

.bottom > button {
  line-height: 88rpx;
  font-size: 28rpx;
  border-radius: 0;
}

.bottom .rest-btn {
  flex: 1;
  color: #333333;
  background: #f5f5f5
}

.bottom .confirm-btn {
  flex: 1;
  color: #fff;
  background: #e86800;
}

.btn::after {
  border: none
}

/* 分类 */
.classifly {
  background: #fff;
  position: relative;
}

.classifly .list-item {
  box-sizing: border-box;
  text-align: center;
}

.classifly .list-item.weightClass {
  width: 140rpx;
  padding: 12rpx 0
}

.list-title {
  padding: 40rpx 30rpx
}

.selelist {
  background: #fff;
  border-top: 1px solid #f5f5f5;
  border-bottom: none
}

/* 商品列表样式  */

.list-info {
  display: flex;
  flex-wrap: wrap;
  box-sizing: border-box;
}

.list-item {
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  padding: 0 30rpx;
  border-radius: 60rpx;
  margin-left: 36rpx;
  margin-bottom: 20rpx;
  color: #999;
  font-size: 24rpx;
  height: 60rpx;
  border: 1px solid #e6e6e6;
  min-width: 140rpx
}

.list-item.active { 
  color: white;
  background: #e86800;
}

/* 按钮  */

.btn {
  color: #999;
  background: white;
  font-size: 28rpx;
  border: 1px solid #e6e6e6;
  width: 250rpx;
  border-radius: 50rpx;
}

.btn.disabled {
  color: #999;
  background: #e6e6e6;
}

.btn::after {
  border: none;
}

.btn:active {
  opacity: 0.8;
}

.btn-default {
  font-size: 32rpx;
  width: 100%;
  line-height: 98rpx;
  color: white;
  border-radius: inherit;
  background: #e86800;
  border: none;
}

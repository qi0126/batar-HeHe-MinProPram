.brandWrap{
  margin-top: -80rpx;

}

/* 搜索 */
.schoolSearchWrap{
  height:112rpx;
  background:rgba(249,249,249,1);
  /* box-shadow:0px 2rpx 4rpx 0px rgba(0,7,14,0.07); */
  border-top: 1rpx solid rgba(0,7,14,0.07);
  padding: 0rpx 15rpx 0rpx 23rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.schoolSearch{
  width:158rpx;
  height:59rpx;
  background:rgba(255,255,255,1);
  border-radius:30rpx;
  border:1rpx solid rgba(235,235,235,1);
  /* margin-left: 23rpx; */
  display: flex;
  align-items: center;
  padding-left: 20rpx;
}

.searchIcon{
  color:rgb(110,110,111);
}

.searchDes{
  font-size:28rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
  margin-left: 17rpx;
}

.releaseTime{
  font-size:26rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
  display: flex;
  align-items: center;
  
}

.rightArrow{
  font-size:22rpx;
  color:rgba(51,51,51,1);
  margin-left: 4rpx;
}

/* 品牌列表 */
.brandUl{
  padding: 0rpx 21rpx 0rpx 18rpx;
}

.brandLi:first-child{
   border-top:1px solid rgba(224,224,224,1);
}

.brandLi{
  /* background: red; */
  border-bottom:1px solid rgba(224,224,224,1);
  padding: 49rpx 0rpx 22rpx 0rpx;
  display: flex;
}

.imgWrap{
  width:258rpx;
  height:212rpx;
  flex-shrink:0;
  overflow: hidden;
}

.imgWrap image {
  width:258rpx;
}

.rightWrap{
  margin-left: 35rpx;
  font-family:PingFangSC-Light,PingFang SC;
}

.desTitle{
  font-size:28rpx;
  font-weight:600;
  color:rgba(0,0,0,1);
  line-height:48rpx;
}

.desCont{
    font-size: 24rpx;
    font-weight: 300;
    height: 74rpx;
    color: rgba(136, 136, 136, 1);
    line-height: 37rpx;
    margin-top: 8rpx;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}


.desTime{
  font-size:22rpx;
  font-weight:300;
  color:rgba(188,120,69,1);
  margin-top: 41rpx;
}

/* 无数据 */
.noData{
  text-align: center;
  margin-top: 142rpx;
  margin-bottom: 60rpx;
  font-size:24rpx;
  font-weight:400;
  color:rgba(149,149,149,1);
}

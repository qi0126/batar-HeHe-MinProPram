@import '/styles/list.wxss';
@import '/styles/utils.wxss';


.p-info {
  /* background: #fff; */
  padding:0 27rpx;
  padding-left: 35rpx;
}

.size-tit {
  padding-top: 50rpx;
  padding-bottom:14rpx;
  font-weight: bold;
  font-size:28rpx;
}

.p-sizet {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: center;
  padding: 0 26rpx;
  min-height: 98rpx;
}

.ps-right {
  flex: 1;
  display: flex;
  justify-content: center;
}

.ps-item {
  position: relative;
  margin: 0 20rpx;
  line-height: 60rpx;
  min-width: 60rpx;
  font-size: 24rpx;
  text-align: center;
  border: 1px solid #e6e6e6;
  border-radius: 60rpx;
}

.ps-item .badge-active, .ps-item .badge{
  top: -10rpx;
  right: -10rpx;
}

.param {
  padding: 20rpx 25rpx;
}

.param-list {
  border-top: none;
  border: 1px solid #ededed;
}

.l-item {
  display: flex;
  border-top: 1px solid #ededed;
}

.l-item:first-child {
  border-top: none 
}

.l-item > view{
  flex: 1;
  line-height: 50rpx;
  font-size: 24rpx;
  text-align: center
}

.l-item > view:first-child {
  display: flex;
  justify-content: center;
  align-items: center;
  background: #f5f5f5;
  border-right: 1px solid #ededed;
}
 
.remark-info {
  width: 100%;
  box-sizing: border-box;
  padding: 6rpx 24rpx;
  height: 120rpx;
}

.p-count {
  border: none
}

.bottom {
  position: fixed;
  width: 100%;
  bottom: 0rpx;
  z-index: 3
}

.b-bottom {
  height: 98rpx;
  display: flex;
}

.b-bottom > button {
  line-height: 98rpx;
}

.bb-left {
  width: 98rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
  border-top: 1px solid #e6e6e6
}

.bb-con {
  width: 326rpx;
  color: #333;
  background: #e6e6e6;
}

.bb-right {
  flex: 1
}

.ps-item.active, .s-item.active {
  position: relative;
  color: #E86800;
  background: #fff;
  border-color:#E86800;
  height:66rpx;
  line-height: 66rpx;
}


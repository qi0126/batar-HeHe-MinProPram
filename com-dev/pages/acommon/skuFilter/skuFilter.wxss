/* 辅件样式 */

.axu-txt-tag {
    font-size: 20rpx;
    color:#999
}

.axu {
    margin-top: 12rpx;
    display: flex;
}

.axu-cl {
    color: #999;
    font-size: 22rpx;
}

.axu-cr {
    color: #333;
    font-size: 22rpx;
}

.axu-img {
    width: 180rpx;
    height: 140rpx;
    overflow: hidden;
}

.axu-img > image {
    width: 180rpx;
}

.axu-content {
    flex: 1;
    margin-left: 10rpx;
    padding-top: 6rpx;
}

.axu-checkbox {
    margin-right: 28rpx;
    display: flex;
    align-items: center
}

.axu-checkbox > image {
    width: 28rpx;
    height: 28rpx;
}
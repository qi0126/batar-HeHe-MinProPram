.container{
 width: 100%;
 height: 79rpx;
 background: #F9F9F9;
}
.tab{
 width: 100%;
 height: 79rpx;
 position: fixed;
 top: 0;
 left: 0;
 z-index: 100;
 white-space: nowrap;
 box-sizing: border-box;
 overflow: hidden;
 line-height: 78rpx;
 background: #F9F9F9;
}
.tab-item{
 font-family: SourceHanSansCN-Normal;
 box-sizing: border-box;
 /* display: inline-block; */
 padding-left:30rpx;
 padding-right:30rpx;
 width: 25%;
 font-size: 30rpx;
 color: rgba(153,153,153,1);
 font-weight:500;
 display: inline-flex;
 flex-direction: column;
 align-items: center;
}
.line{
  height:8rpx;
  background: #000;
  width:90rpx;
  margin:0 auto;
}

.item{
 width:fit-content;
 font-family: PingFangSC-Medium;
 /* margin: auto; */
 font-size: 30rpx;
 font-weight:600;
color:rgba(153,153,153,1);
 height: 70rpx;
}

.active{
 color:rgba(0,0,0,1);
}
.hidden{
  display: none !important;
}


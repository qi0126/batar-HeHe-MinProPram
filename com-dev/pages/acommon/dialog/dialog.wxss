.layer {
  position: fixed;
  top: 0;
  display: flex;
  justify-content: center;
  width: 100%;
  height: 100vh;
  z-index: 4;
  color: #333;
  background: rgba(0, 0, 0, .3) 
}

.layer-con {
  display: flex;
  flex-direction: column;
  position: absolute;
  margin-top: 200rpx;
  width: 100%;
  height: 660rpx;
  background: #fff;
  border-radius: 20rpx 20rpx 0rpx 0rpx;
  bottom:0;
}

.tit {
  color: #666;
  text-align: center;
  margin-top: 42rpx;
  margin-bottom: 90rpx;
}

.layer-con image {
}

.info {
  font-size: 36rpx;
}

.bottom {
  position: absolute;
  bottom: 0;
  display: flex;
  width: 100%;
}

.bottom > button {
  line-height: 88rpx;
  font-size: 28rpx;
  border-radius: 0;
}

.bottom > button:first-child {
  flex: 1;
  background: #f5f5f5
}

.bottom > button:last-child {
  flex: 1;
  color: #fff;
  background: #A71C20;
}

.btn::after {
  border: none
}

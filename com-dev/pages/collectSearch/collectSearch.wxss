
/* 搜索 */
.upperPart{
  display: flex;
  align-items: center;
  padding-left: 19rpx;
  padding-top: 19rpx;
  padding-bottom: 17rpx;
  border-top: 1rpx solid #EBEBEB;
}

.upperPart .searchCont{
  position: relative;
}

.upperPart .searchIcon{
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: 21rpx;
  left: 19rpx;
}

.upperPart .closeIcon{
  width: 30rpx;
  position: absolute;
  top: 21rpx;
  right: 19rpx;
  z-index: 1000;
}

.upperPart .inputBox{
  width:616rpx;
  height:71rpx;
  background:rgba(238,238,238,1);
  padding:0 50rpx 0 70rpx;
  box-sizing: border-box;
}

.upperPart .placeholder{
  font-size:28rpx;
  font-family:PingFangSC-Light;
  font-weight:300;
 color:rgba(189,189,189,1);
}

.upperPart .cancel{
  margin-left: 32rpx;
  font-size:30rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(51,51,51,1);
  letter-spacing:1rpx;
}




/* 按钮 */
.bottom {
  padding: 20rpx 30rpx;
  padding-top: 30rpx; 
}

.b-tit {
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  color: #333;
  margin-bottom: 10rpx;
}

.b-info {
  font-size: 24rpx;
  color: #808080;
  line-height: 1.8
}

.b-collect {
  width: 100rpx;
  float: right;
  margin-top: 10rpx;
}

.backtop {
  width: 80rpx;
  height: 80rpx;
  position: fixed;
  bottom: 100rpx;
  right: 20rpx;
  opacity: .5
}

.backtop:active {
  opacity: 1
}

.loadmore {
  padding-bottom: 30rpx;
}

.nothing {
  display: flex;
  flex-direction: column; 
  align-items: center;
  margin-top: 40rpx;
}

.top {
  display: flex;
  align-items: center;
}

.top > view {
  width: 100%;
}

.img-it {
  position: relative;
}

.downxx {
  position: absolute;
  top: 50%;
  left: 0;
  width: 100%;
}

.downxx > image {
  width: 100%;
}

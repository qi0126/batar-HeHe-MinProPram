@import '/svg/iconfont.wxss';

.backHome {
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 20rpx;
  right: 24rpx;
  z-index: 100;
  width: 70rpx;
  height: 70rpx;
  background: rgba(0, 0, 0, .2);
  border-radius: 50rpx;
  color: #fff;
}

.backHome > view {
  margin-top: -4rpx;
  font-size: 36rpx;
}

/* 底部 */

.footer {
    background: rgba(255, 255, 255, 1);
    position: fixed;
    bottom: 0rpx;
    height: 101rpx;
    width: 100%;
    display: flex;
    align-items: center;
    border-top: 1rpx solid rgba(233, 233, 233, 1);
}

.leftWrap, .rightWrap {
    flex: 1;
    text-align: center;
    font-size: 26rpx;
    font-weight: 400;
    color: rgba(51, 51, 51, 1);
}

.leftWrap {
    border-right: 1px solid rgba(151, 151, 151, 1);
}

.Icon1 {
    font-size: 26rpx;
    color: rgba(51, 51, 51, 1);
    margin-right: 16rpx;
}

.Icon2 {
    margin-right: 16rpx;
    font-size: 30rpx;
    color: rgba(225, 103, 29, 1);
}

.Icon3 {
    margin-right: 16rpx;
    font-size: 30rpx;
    color: #666;
}
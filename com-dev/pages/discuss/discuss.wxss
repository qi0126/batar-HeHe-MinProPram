.discussWrap {
    height: 100vh;
    background: rgba(255, 255, 255, 1);
    position: relative;
}

.discuss {
    border-top: 1rpx solid rgba(249, 249, 249, 1);
    background: rgba(255, 255, 255, 1);
    padding: 0rpx 30rpx;
    padding-bottom: 230rpx;
}

.discussWrap .num {
    font-size: 28rpx;
    font-weight: 500;
    color: rgba(0, 0, 0, 1);
    height: 82rpx;
    line-height: 82rpx;
}

.li {
    padding: 22rpx 0rpx 42rpx 0rpx;
    border-bottom: 1rpx solid rgba(233, 233, 233, 1);
    display: flex;
}

.li .imgWrap {
    width: 78rpx;
    height: 78rpx;
    /* background: rgba(216, 216, 216, 1); */
    border-radius: 50%;
    flex-shrink: 0;
    overflow: hidden;
}

.imgWrap image {
    width: 78rpx;
    background: rgba(216, 216, 216, 1);
}

.li:first-child {
    border-top: 1rpx solid rgba(233, 233, 233, 1);
}

.desWrap {
    margin-left: 25rpx;
}

.desWrap .name {
    word-wrap: break-word;
    font-size: 26rpx;
    font-weight: 400;
    color: rgba(136, 136, 136, 1);
}

.desWrap .des {
    font-size: 28rpx;
    font-weight: 400;
    color: rgba(51, 51, 51, 1);
    line-height: 40rpx;
}

/* 无数据 */

.noData {
    font-size: 24rpx;
    font-weight: 400;
    color: rgba(149, 149, 149, 1);
    text-align: center;
    margin-top: 103rpx;
}

/* 底部 */

.footer {
    background: rgba(255, 255, 255, 1);
    position: fixed;
    bottom: 0rpx;
    height: 101rpx;
    width: 100%;
    display: flex;
    align-items: center;
    border-top: 1rpx solid rgba(233, 233, 233, 1);
}

.leftWrap, .rightWrap {
    flex: 1;
    text-align: center;
    font-size: 26rpx;
    font-weight: 400;
    color: rgba(51, 51, 51, 1);
}

.leftWrap {
    border-right: 1px solid rgba(151, 151, 151, 1);
}

.Icon1 {
    font-size: 26rpx;
    color: rgba(51, 51, 51, 1);
    margin-right: 16rpx;
}

.Icon2 {
    margin-right: 16rpx;
    font-size: 30rpx;
    color: rgba(225, 103, 29, 1);
}

.Icon3 {
    margin-right: 16rpx;
    font-size: 30rpx;
    color: #666;
}

/* 弹框 */

.modal {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 99;
    background: rgba(0, 0, 0, 0.6);
}

.panel {
    position: absolute;
    bottom: 0rpx;
    left: 0;
    width: 100%;
    min-height: 300rpx;
    box-sizing: border-box;
    background: rgba(249, 249, 249, 1);
    /* pointer-events:none; */
    padding: 20rpx 20rpx;
    display: flex;
}

.comment-content {
    width: 560rpx;
    height: 200rpx;
    text-align: left;
    padding: 20rpx;
    font-size: 32rpx;
    background: #fff;
    border: 1rpx solid rgba(233, 233, 233, 1);
    border-radius: 2%;
}

.send {
    color: rgb(192, 192, 192);
    font-size: 32rpx;
    position: absolute;
    right: 20rpx;
    bottom: 45rpx;
}

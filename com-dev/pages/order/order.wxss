.tab {
  display: flex;
  justify-content: space-between;
  padding: 0 40rpx;
  line-height: 98rpx;
  font-size:28rpx;
  font-family:PingFangSC;
  font-weight:400;
  color:rgba(0,0,0,1);
  background:rgba(255,255,255,1);
  box-shadow:0rpx 2rpx 4rpx 0rpx rgba(12,64,149,0.16);
  border-top:1rpx solid rgba(228,228,228,1);
  margin-bottom: 26rpx;
} 


.tab > view.active {
  color: #E86800

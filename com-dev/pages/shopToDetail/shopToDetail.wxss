.detail {
  padding-bottom: 260rpx;
  background: #fff
}

swiper {
  height: 500rpx;
}

.slide-image {
  width: 100%;
  height: 500rpx;
}

.pro-detail {
  background: #fff;
  margin-bottom: 20rpx;
}

.pro-detail .tit {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 40rpx;
  font-size: 32rpx;
  height: 120rpx;
}

.tit-right {
  display: flex;
  align-items: center
}

.pro-detail .tag {
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
  padding: 0 10rpx;
  margin-right: 20rpx;
  width: 90rpx;
  max-width: 120rpx;
  height: 38rpx;
  border: 1px solid #e6e6e6;
  border-radius: 4rpx;
}

.pro-detail .tag > view {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden
}

.p-tit {
  font-size: 32rpx;
  line-height: 88rpx;
  text-indent: 24rpx;
  border-bottom: 1px solid #f5f5f5; 
}

.p-info {
  background: #fff;
}

.size-tit {
  padding: 30rpx 26rpx;
}

.p-sizet {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: center;
  padding: 0 26rpx;
  min-height: 98rpx;
}

.ps-right {
  flex: 1;
  display: flex;
  justify-content: center;
}

.ps-item {
  position: relative;
  margin: 0 20rpx;
  line-height: 60rpx;
  min-width: 60rpx;
  font-size: 24rpx;
  text-align: center;
  border: 1px solid #e6e6e6;
  border-radius: 60rpx;
}

.ps-item .badge-active, .ps-item .badge{
  top: -10rpx;
  right: -10rpx;
}

.param {
  padding: 20rpx 25rpx;
}

.param-list {
  border-top: none;
  border: 1px solid #ededed;
}

.l-item {
  display: flex;
  border-top: 1px solid #ededed;
}

.l-item:first-child {
  border-top: none 
}

.l-item > view{
  flex: 1;
  line-height: 50rpx;
  font-size: 24rpx;
  text-align: center
}

.l-item > view:first-child {
  display: flex;
  justify-content: center;
  align-items: center;
  background: #f5f5f5;
  border-right: 1px solid #ededed;
}
 
.remark-info {
  width: 100%;
  box-sizing: border-box;
  padding: 6rpx 24rpx;
  height: 120rpx;
}

.p-count {
  border: none
}

.bottom {
  position: fixed;
  width: 100%;
  bottom: 0rpx;
  z-index: 3
}

.b-bottom {
  height: 98rpx;
  display: flex;
}

.b-bottom > button {
  line-height: 98rpx;
}

.bb-left {
  width: 98rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
  border-top: 1px solid #e6e6e6
}

.bb-con {
  width: 326rpx;
  color: #333;
  background: #e6e6e6;
}

.bb-right {
  flex: 1
}

.ps-item.active, .s-item.active {
  position: relative;
  color: white;
  background: #a71c20;
}

.ps-item.active::after{
  position: absolute;
  top: 0;
  left: 0; 
  right: 0;
  bottom: -90rpx;
  content: '';
  display: block;
  width:0;
  height:0; 
  margin: auto;
  border-top: 6px solid #A71C20;
  border-right: 6px solid transparent;
  border-bottom: 6px solid transparent;
  border-left: 6px solid transparent;
}

.nobackground {
  background: none
}

/* 克重要求  */
.weight-scope {
  display: flex;
  justify-content: space-between;
  padding-left: 30rpx;
}

.weight-scope > view:first-child {
  min-width: 270rpx;
  margin-right: 40rpx;
}

.weight-scope > view:first-child text {
  margin-left: 6rpx;
}

.weight-scope .sele-info > input {
  box-sizing: border-box;
  width: 100rpx;
  padding: 0
}

.custom-item-wrap {
  display: flex;
}

.weight-scope .sele-info.custom-item > input {
  width: 140rpx;
}

.weight-scope .sele-info > view  {
  width: 10rpx;
  margin: 0 10rpx;
}

.weight-scope .sele-place {
  font-size: 20rpx;
}

.weight-scope .btn-small {
  margin-left: 40rpx;
  color: #fff;
  width: 120rpx;
  line-height: 50rpx;
  background: #A71C20;
  font-size: 24rpx;
}

/* 新增克重列表  */

.bt-list {
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding: 15rpx 40rpx;
  min-height: 98rpx;
  border-bottom: 1px solid #f5f5f5;
}

.bt-word {
  padding-bottom: 0;
  padding-right: 0;
  padding-left: 30rpx
}

.bt-word-left {
  min-width: 140rpx;
  display: flex;
  flex-direction: column;
}

.bt-word-item {
  border: none
}

.worditem {
  padding-right: 20rpx;
}

.bt-word-item .batar-scoll-item {
  box-sizing: border-box;
  min-width: 140rpx;
  margin-bottom: 10rpx;
}

.bt-word-item > view {
  margin-left: 20rpx;
}

.bt-word-item .list-item {
  margin-bottom: 15rpx;
  font-size: 28rpx;
}

.new-weight .btn-small {
  box-sizing: border-box;
  color: #a71c20;
  border: 1px solid #a71c20
}

.new-weight .batar-scoll-listw {
  padding-left: 0;
  margin-right: 15rpx;
}

.new-weight .batar-scoll-listw .batar-scoll-list {
  width: 200rpx
}

/* 圈口  */

.circle {
  display: flex;
  box-sizing: border-box;
  background: #fff;
  border-bottom: 1px solid #f5f5f5
} 

.circle .size-tit {
  padding: 0;
  margin-left: 30rpx;
  margin-right: 10rpx;
  display: flex;
  align-items: center;
  /* width: 150rpx; */
}

.circle .batar-scoll-listw {
  margin-right: 15rpx;
  border: none;
  width: 550rpx;
  padding-left: 10rpx;
}

.circle .batar-scoll-item {
  padding: 0;
  min-width: 60rpx;
}

.s-item .badge-active, .s-item .badge {
  top: -10rpx;
  right: -10rpx;
}

/* 标签覆盖样式  */
.moreweight-badge,  .circle-badge{
  top: -10rpx;
  right: -8rpx
}

.circle-badge {
  padding: 0 0.4em
}

/* 链长范围  */
.chainlength {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 70rpx;
}

.hot-box {
  display: inline-block;
  width: 200rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  color: #a71c20;
  border: 1px solid #A71C20
}

.hot-box:active {
  opacity: .8
}

/* 链长范围弹窗样式覆盖  */
.chain-box  {
  padding: 0 80rpx;
}

.chain-box .l-item > view {
  background: #fff
}

.chain-box .l-item .th {
  background: #e6e6e6
}

/* 备注 */
